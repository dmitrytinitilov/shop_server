link(rel="stylesheet" href='./css/style.css')

div(class='main')
	form(action='/api/add_product')
		p= 'Product name'
		input(type="text" name="name")
		p= 'Description'
		textarea(name="description")
		p= 'Price'
		input(type="text" name="price")

		input(type="submit")

	ul
		each product in products
			li=product.name